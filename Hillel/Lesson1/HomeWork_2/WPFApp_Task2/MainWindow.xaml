        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1200">
    <Grid Initialized="Grid_Initialized">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="129*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="550*"/>
            <RowDefinition Height="619*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Height="100" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="151,143,0,0" Grid.ColumnSpan="2"/>
